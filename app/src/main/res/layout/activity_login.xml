<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_green_logo"
            android:layout_marginBottom="24dp"/>
        
        <EditText
            android:id="@+id/phone_field"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/field_login"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="8dp"
            android:inputType="phone"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextGreen"
            android:textSize="15sp"
            android:hint="Логин"
            android:fontFamily="sans-serif-light"/>

        <EditText
            android:id="@+id/password_field"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/field_login"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_marginBottom="10dp"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:textColor="@color/colorTextGreen"
            android:textSize="15sp"
            android:hint="Пароль"
            android:fontFamily="sans-serif-light"/>

        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:textColor="@color/colorTextGreen"
            android:text="Забыли пароль?"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/vk"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/vk"/>
            <ImageView
                android:id="@+id/facebook"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/facebook"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"/>
            <Button
                android:id="@+id/login_button"
                android:layout_width="136dp"
                android:layout_height="44dp"
                android:background="@drawable/login_button"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:text="Войти"/>
        </LinearLayout>

        <TextView
            android:id="@+id/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-light"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:textColor="@color/colorTextGreen"
            android:text="Пропустить"/>

    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_green_wave"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="12dp"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/register"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/register_field"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:shadowColor="#0000"
            android:text="Регистрация по номеру"/>

    </FrameLayout>

</LinearLayout>